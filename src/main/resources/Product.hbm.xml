<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="pl.edu.wszib.model.Product" table="tproduct">
        <id name="productID" column="id" type="int">
            <generator class="native"/>
        </id>
        <property name="productName" column="name" type="string"/>
        <property name="productCategory" column="category" type="string"/>
        <property name="productPrice" column="price" type="double"/>
        <property name="productQuantity" column="quantity" type="double"/>
        <property name="alarm" column="alarm" type="int"/>
    </class>
</hibernate-mapping>